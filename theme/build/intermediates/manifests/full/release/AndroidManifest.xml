<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.baumann.thema"
    android:versionCode="12"
    android:versionName="3.4" >

    <uses-sdk
        android:minSdkVersion="21"
        android:targetSdkVersion="22" />

    <uses-feature
        android:name="org.cyanogenmod.theme"
        android:required="true" />

    <meta-data
        android:name="org.cyanogenmod.theme.name"
        android:value="Blue Minimal" />
    <meta-data
        android:name="org.cyanogenmod.theme.author"
        android:value="Baumann Produktion" />
    <meta-data
        android:name="org.cyanogenmod.theme.email"
        android:value="baumann.juergen@posteo.de" />

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.SET_WALLPAPER" />
    <uses-permission android:name="android.permission.SET_WALLPAPER_HINTS" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/title_app"
        android:theme="@android:style/Theme.Material" >

        <!-- Add this activity to your manifest. Change the path to where the RequestActivity.java file is. -->
        <activity
            android:name="de.baumann.thema.Wallpaper"
            android:finishOnCloseSystemDialogs="true"
            android:icon="@drawable/ic_launcher"
            android:label="@string/title_wallpaper"
            android:parentActivityName="de.baumann.thema.MainActivity"
            android:screenOrientation="nosensor" >
            <intent-filter>
                <action android:name="android.intent.action.SET_WALLPAPER" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="de.baumann.thema.RequestActivity"
            android:label="@string/title_iconrequest"
            android:parentActivityName="de.baumann.thema.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="de.baumann.thema.MainActivity" />
        </activity>
        <activity
            android:name="de.baumann.thema.MainActivity"
            android:label="@string/title_app" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>